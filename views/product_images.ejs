<body>
  <header>
    <nav>
      <div class="nav-brand">
        <h1> <a href="">S.W.D</a> </h1>
      </div>

      <div class="links">
        <ul>

          <input type="checkbox" name="" value="" id="menu">
          <label for="menu"><i class="fa fa-bars"></i></label>

          <a href="/"> <i class="fa fa-home"></i>Home</a>
          <a href="/store"><i class="fas fa-bags-shopping"></i>Store</a>
          <a href="/blog"><i class="fa fa-blog"></i>Blog</a>
          <a href="/account"><i class="fa fa-user-tie"></i>Account</a>
          <a id="me" href="/cart"><i class="fas fa-shopping-cart"></i><small id="cart-num"></small> </a>
        </ul>
      </div>
    </nav>
  </header>

  <!---------- Single Product Details ----------->

  <section class="section">

    <div class=" single-product">
      <div class="row">

        <div class="col ">
          <img src="/<%= productItem.image%>" class="pic" id="productImg" width="100%" alt="Jordan BLUE-WHITE">

          <!-- <div class="small-img-row">
            <div class="small-img-col space-in-pic">
